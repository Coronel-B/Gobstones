  DibujarCuadrado(3, Verde)
}

procedure DibujarCuadrado(largoLado, colorCuadrado) {
/*
    PRO: Dibuja un cuadrado 
    PRE: El tablero tiene que ser de al menos 1x1 y tienen que existir @param largoLado celdas hacia
        el noreste.
    @param largoLado: Numero. Es el largo de los lados del cuadrado
    @param colorCuadrado: Color. Es el color del cuadrado 
*/
  foreach direccion in [minDir() .. maxDir()] {
      DibujarLinea(largoLado-1, colorCuadrado, direccion)
      Mover(direccion)
  }
}

procedure DibujarLinea(largoLinea, colorLinea, sentidoLinea) {
/*
    PRO: Dibuja una linea a partir de la celda actual
    PRE: @param largoLinea >= 2 sino es un punto y tienen que existir @param largoLinea-1 celdas
        hacia @param sentidoLinea
    @param largoLinea: Numero. Es el largo de la linea
    @param colorLinea. Color. Es el color de la linea
    @param sentidoLinea. Direccion. Es el sentido de la linea
*/
    repeat (largoLinea-1) {
        Poner(colorLinea)
        Mover(sentidoLinea)
    }
    Poner(colorLinea)
}